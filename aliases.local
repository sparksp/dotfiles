# Bundler
alias be="bundle exec"

# Git
alias gd="git diff"
alias gco="git checkout"

# Git Flow
alias gfs="git flow feature start"
alias gff="git flow feature finish"
alias grs="git flow release start"
alias grf="git flow release finish"

# File listings
alias ls="exa --classify"
alias l="exa --classify --long --color-scale --git --git-ignore"
alias ll="exa --classify --long --color-scale --git"
alias la="exa --classify --long --color-scale --git --all"